            <?php 
            switch($filtro_estado) {
                case 'pendientes': echo 'Mostrando registros pendientes de validaci車n'; break;
                case 'aprobados': echo 'Mostrando registros completamente aprobados'; break;
                case 'solo_admin': echo 'Mostrando registros pendientes de validaci車n del Administrador'; break;
